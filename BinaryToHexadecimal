#include<stdio.h>
#include<string.h>
int binaryToDecimal(char binary[]){
    int decimal =0;
    int len=strlen(binary);
    for(int i=0;i<len;i++){
        if(binary[i]=='1'){
            decimal+=1<<(len-1-i);
        }else if(binary[i]!='0'){
            printf("Invalid binary: %c\n",binary[i]);
            return -1;
        }
    }
    return decimal;
}

void decimalToHexadecimal(int decimal){
    if(decimal==0){
        printf("Hexadecimal: 0\n");
        return;
    }
    char hex[20];
    int i=0;
    while(decimal!=0){
        int rem=decimal%16;
        hex[i++]=(rem<10)?(rem+'0'):(rem-10+'A');
        decimal/=16;
    }
    printf("Hexadecimal: ");
    for(int j=i-1;j>=0;j++){
        printf("%c",hex[j]);
    }
    printf("\n");
}
int main(){
    char binary[65];
    printf("Enter a Binary Num: ");
    scanf("%64s", &binary);
    int decimal=binaryToDecimal(binary);
    if(decimal!=-1){
        decimalToHexadecimal(decimal);
    }
    return 0;
}
